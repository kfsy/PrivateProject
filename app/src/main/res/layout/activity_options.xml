<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.garden.gts.ma.RecoveryActivity"
    android:background="@mipmap/main_pic"
    android:id="@+id/recoveryLayout">

    <Button
        android:layout_width="160sp"
        android:layout_height="60sp"
        android:text="背景音乐：开"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/fbtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/soundSwitch"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/soundSwitch"
        android:layout_marginTop="50sp"
        >
        <Button
            android:layout_width="120sp"
            android:layout_height="36sp"
            android:layout_gravity="center_horizontal"
            android:text="补1时间设置"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"
            android:background="#CCFFFFFF"
            android:id="@+id/r1Setting"/>
        <Button
            android:layout_width="120sp"
            android:layout_height="36sp"
            android:layout_gravity="center_horizontal"
            android:text="补2时间设置"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"
            android:background="#CCFFFFFF"
            android:id="@+id/r2Setting"/>
        <Button
            android:layout_width="120sp"
            android:layout_height="36sp"
            android:layout_gravity="center_horizontal"
            android:text="补3时间设置"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"
            android:background="#CCFFFFFF"
            android:id="@+id/r3Setting"/>
        <Button
            android:layout_width="120sp"
            android:layout_height="36sp"
            android:layout_gravity="center_horizontal"
            android:text="补4时间设置"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"
            android:background="#CCFFFFFF"
            android:id="@+id/r4Setting"/>
        <Button
            android:layout_width="120sp"
            android:layout_height="36sp"
            android:layout_gravity="center_horizontal"
            android:text="准备时间设置"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"
            android:background="#CCFFFFFF"
            android:id="@+id/waitTime"/>
    </LinearLayout>
    <Button
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:text="返  回"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/fbtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/back"/>
</RelativeLayout>
